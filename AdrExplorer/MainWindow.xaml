<Window x:Class="AdrExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ADR Explorer" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <DockPanel>
        <StackPanel Name="FilterPanel" DockPanel.Dock="Top" Orientation="Horizontal">
            <Label Content="From:" />
            <DatePicker SelectedDate="{Binding Path=StartDate}" SelectedDateChanged="DatePicker_SelectedDateChanged" />
            <Label Content="To:" />
            <DatePicker SelectedDate="{Binding Path=EndDate}" SelectedDateChanged="DatePicker_SelectedDateChanged" />
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DataGrid Name="StudyGrid" Grid.Row="0" AutoGeneratingColumn="Grid_AutoGeneratingColumn" SelectionChanged="StudyGrid_SelectionChanged" />
            <DataGrid Name="ImageGrid" Grid.Row="1" AutoGeneratingColumn="Grid_AutoGeneratingColumn" />
        </Grid>
    </DockPanel>
</Window>
